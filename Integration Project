print("Welcome to the basic math quiz game.")
addStart = 0
subStart = 0
mulStart = 0
divStart = 0
beginning = input("Would you like to practice addition, subtraction, multiplication, or division?: ")
selectionUpper = ["Addition", "Subtraction", "Multiplication", "Division"]
addition = selectionUpper[0]
subtraction = selectionUpper[1]
multiplication = selectionUpper[2]
division = selectionUpper[3]
restart = True

while restart:
    if beginning.lower() == addition.lower() or beginning.lower() == subtraction.lower() or beginning.lower() == multiplication.lower() or beginning.lower() == division.lower():
        restart = False
        break
    else:
        beginning = input("Please enter Addition, Subtraction, Multiplication, or Division: ")
        restart = True

if beginning.lower() == addition.lower():
    addStart = addStart + 1
elif beginning.lower() == subtraction.lower():
    subStart = subStart + 1
elif beginning.lower() == multiplication.lower():
    mulStart = mulStart + 1
elif beginning.lower() == division.lower():
    divStart = divStart + 1

if addStart == 1:
    import random
    score = 0
    question = 0
    intOne = (random.randint(1, 12))
    intTwo = (random.randint(1, 12))
    sumOne = intOne + intTwo
    sumTwo = sumOne + 5
    print("what is", intOne, "+", intTwo, "?")
    testSumone = int(input())
    question = question + 1
    if sumOne == testSumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumOne)
    print("Now what is", sumOne, "+ 5")
    testSumtwo = int(input())
    question = question + 1
    if sumTwo == testSumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumTwo)
    print("Your score is", score, "out of", question)
if subStart == 1:
    import random
    score = 0
    question = 0
    intOne = (random.randint(1, 12))
    intTwo = (random.randint(1, 12))
    sumOne = intOne - intTwo
    sumTwo = sumOne - 5
    print("what is", intOne, "-", intTwo, "?")
    testSumone = int(input())
    question = question + 1
    if sumOne == testSumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumOne)
    print("Now what is", sumOne, "- 5")
    testSumtwo = int(input())
    question = question + 1
    if sumTwo == testSumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumTwo)
    print("Your score is", score, "out of", question)
if mulStart == 1:
    import random
    score = 0
    question = 0
    intOne = (random.randint(1, 12))
    intTwo = (random.randint(1, 12))
    sumOne = intOne * intTwo
    sumTwo = sumOne * 5
    print("what is", intOne, "*", intTwo, "?")
    testSumone = int(input())
    question = question + 1
    if sumOne == testSumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumOne)
    print("Now what is", sumOne, "* 5")
    testSumtwo = int(input())
    question = question + 1
    if sumTwo == testSumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumTwo)
    print("Your score is", score, "out of", question)
if divStart == 1:
    import random
    score = 0
    question = 0
    intOne = (random.randint(1, 100))
    intTwo = (random.randint(1, 10))
    sumOne = intOne / intTwo
    sumTwo = sumOne / 5
    print("what is", intOne, "/", intTwo, "?")
    testSumone = float(input())
    question = question + 1
    if sumOne == testSumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumOne)
    print("Now what is", sumOne, "/ 5")
    testSumtwo = float(input())
    question = question + 1
    if sumTwo == testSumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sumTwo)
    print("Your score is", score, "out of", question)