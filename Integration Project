print("Welcome to the basic math quiz game.")
add_start = 0
sub_start = 0
mul_start = 0
div_start = 0
beginning = input("Would you like to practice addition, subtraction, "
                  "multiplication, or division?: ")
selection_upper = ["Addition", "Subtraction", "Multiplication", "Division"]
addition = selection_upper[0]
subtraction = selection_upper[1]
multiplication = selection_upper[2]
division = selection_upper[3]
restart = True

while restart:
    if beginning.lower() == addition.lower() or beginning.lower() == \
            subtraction.lower() or beginning.lower() == \
            multiplication.lower() or beginning.lower() == division.lower():
        restart = False
        break
    else:
        beginning = input("Please enter Addition, Subtraction, "
                          "Multiplication, or Division: ")
        restart = True

if beginning.lower() == addition.lower():
    add_start = add_start + 1
elif beginning.lower() == subtraction.lower():
    sub_start = sub_start + 1
elif beginning.lower() == multiplication.lower():
    mul_start = mul_start + 1
elif beginning.lower() == division.lower():
    div_start = div_start + 1

if add_start == 1:
    import random

    score = 0
    question = 0
    int_one = (random.randint(1, 12))
    int_two = (random.randint(1, 12))
    int_three = (random.randint(1, 12))
    sum_one = int_one + int_two
    sum_two = sum_one + int_three

    print("what is", int_one, "+", int_two, "?")
    invalid_input = True
    while invalid_input:
        try:
            test_sumone = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    question = question + 1
    if int(sum_one) == test_sumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_one)

    print("Now what is", sum_one, "+", int_three)
    invalid_input = True
    while invalid_input:
        try:
            test_sumtwo = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    question = question + 1
    if int(sum_two) == test_sumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_two)
    print("Your score is", score, "out of", question)

if sub_start == 1:
    import random

    score = 0
    question = 0
    int_one = (random.randint(1, 12))
    int_two = (random.randint(1, 12))
    int_three = (random.randint(1, 12))
    sum_one = int_one - int_two
    sum_two = sum_one - int_three
    print("what is", int_one, "-", int_two, "? ")
    question = question + 1

    invalid_input = True
    while invalid_input:
        try:
            test_sumone = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    if int(sum_one) == test_sumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_one)

    print("Now what is", sum_one, "-", int_three)
    question = question + 1

    invalid_input = True
    while invalid_input:
        try:
            test_sumtwo = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    if int(sum_two) == int(test_sumtwo):
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_two)
    print("Your score is", score, "out of", question)

if mul_start == 1:
    import random

    score = 0
    question = 0
    int_one = (random.randint(1, 12))
    int_two = (random.randint(1, 12))
    int_three = (random.randint(1, 5))
    sum_one = int_one * int_two
    sum_two = sum_one * int_three
    print("what is", int_one, "*", int_two, "?")
    invalid_input = True
    while invalid_input:
        try:
            test_sumone = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    question = question + 1
    if int(sum_one) == test_sumone:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_one)
    print("Now what is", sum_one, "*", int_three)
    invalid_input = True
    while invalid_input:
        try:
            test_sumtwo = int(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value: ")

    question = question + 1
    if int(sum_two) == test_sumtwo:
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_two)
    print("Your score is", score, "out of", question)

if div_start == 1:
    import random

    score = 0
    question = 0
    int_one = (random.randint(1, 100))
    int_two = (random.randint(1, 10))
    int_three = (random.randint(1, 10))
    sum_one = int_one / int_two
    sum_two = sum_one / int_three
    print("what is", int_one, "/", int_two, "rounded to the nearest integer?")
    question = question + 1
    invalid_input = True
    while invalid_input:
        try:
            test_sumone = float(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value rounded to the nearest "
                  "integer: ")

    if round(float(sum_one)) == round(test_sumone):
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_one)
    print("Now what is", round(sum_one), "/", int_three, "rounded to the "
                                                         "nearest integer?")

    invalid_input = True
    while invalid_input:
        try:
            test_sumtwo = float(input("Answer: "))
            invalid_input = False
        except ValueError:
            print("Please enter a numeric value rounded to the nearest "
                  "integer: ")

    question = question + 1
    if round(float(sum_two)) == round(test_sumtwo):
        print("Correct!")
        score = score + 1
    else:
        print("Incorrect. The answer is actually", sum_two)
    print("Your score is", score, "out of", question)
